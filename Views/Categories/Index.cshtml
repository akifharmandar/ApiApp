crossorigin="anonymous"></script>

<script>
    $(document)function(){
$("#save").click(function(){
var category= $("form")
.serializeArray();
$.ajax({
    url:"http://localhost:5000/api/categories",
    type:"Post",
    dataType:"json",
    cache:false,
    data:{category},
    success : function(data){},
    error : function(err){}

})

})

    }




</script>



